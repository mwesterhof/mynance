<TitleBar>:
    size_hint_y: None
    height: 100
    Button:
        on_press: app.root.current = 'menu'
        width: 100
        size_hint_x: None
        background_normal: 'data/menu.png'
        background_down: 'data/menu_active.png'
    Label:
        text: f"mYnance - {root.title}"
        size_hint_x: 10
    Label:
        width: 100
        size_hint_x: None
    
<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: None
            height: 100

            Button:
                width: 100
                size_hint_x: None
                background_normal: 'data/menu_active.png'
                background_down: 'data/menu_active.png'
            Label:
                text: "mYnance - menu"
                size_hint_x: 10
            Label:
                width: 100
                size_hint_x: None

        BoxLayout:
            size_hint_y: 10
            orientation: 'vertical'
            Button:
                text: "title"
                on_press: root.manager.current = 'title'
            Button:
                text: "about"
                on_press: root.manager.current = 'about'
            Button:
                text: "balance"
                on_press: root.manager.current = 'balance'

<TitleScreen>:
    BoxLayout:
        orientation: "vertical"

        TitleBar:
            title: "home"

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            BoxLayout:
                size_hint_y: 4
                orientation: "vertical"
                Label:
                    text: "title screen"
                    height: 1
                Label:
                    text: "title screen"
                    height: 1
                Label:
                    text: "title screen"
                    height: 1
                Label:
                    text: "title screen"
                    height: 1

<AboutScreen>:
    BoxLayout:
        orientation: "vertical"

        TitleBar:
            title: "about"

        Label:
            size_hint_y: 10
            text: "about page"

<BalanceScreen>:
    BoxLayout:
        orientation: "vertical"

        TitleBar:
            title: "balance"

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 10

            BoxLayout:
                size_hint_y: None
                Label:
                    text: "balance: "
                Label:
                    text: f"{app.balance}"
            TextInput:
                size_hint_y: None
                height: 300
                text: "description"
            BoxLayout:
                size_hint_y: None
                Label:
                    text: "amount: "
                TextInput:
                    text: "0"
                    multiline: False
                Button:
                    text: "submit"
            Label:
                size_hint_y: None
                text: ""
