<TitleBar>:
    size_hint_y: None
    height: 100
    canvas:
        Color:
            rgb: (.5, .5, 1)
        Rectangle:
            pos: [self.pos[0], self.pos[1] - 100]
            size: [self.size[0], 10]
    Button:
        on_press: app.root.current = 'menu'
        width: 100
        size_hint_x: None
        background_normal: 'data/menu.png'
        background_down: 'data/menu_active.png'
    Label:
        size_hint_x: 10
        text: f"mYnance - {root.title}"
    Label:
        width: 100
        size_hint_x: None
    
<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: None
            height: 100

            Button:
                width: 100
                size_hint_x: None
                background_normal: 'data/menu_active.png'
                background_down: 'data/menu_active.png'
            Label:
                text: "mYnance - menu"
                size_hint_x: 10
            Label:
                width: 100
                size_hint_x: None

        BoxLayout:
            size_hint_y: 10
            orientation: 'vertical'
            Button:
                text: "title"
                on_press: root.manager.current = 'title'
            Button:
                text: "balance"
                on_press: root.manager.current = 'balance'
            Button:
                text: "about"
                on_press: root.manager.current = 'about'

<TitleScreen>:
    BoxLayout:
        orientation: "vertical"

        TitleBar:
            title: "home"
        Label:
            text: f"balance: {app.balance}"
            size_hint_y: None
            height: 400
        BoxLayout:
            size_hint_y: None
            height: 200
            orientation: "vertical"
            Label:
                text: "title screen"
                height: 1
        Label:
            size_hint_y: 1

<AboutScreen>:
    BoxLayout:
        orientation: "vertical"

        TitleBar:
            title: "about"

        Label:
            size_hint_y: 10
            text: "about page"
        BoxLayout:
            size_hint_y: None
            height: 200
            Label:
                size_hint_x: 1
            Button:
                on_press: root.cat()
                background_normal: 'data/cat.png'
                background_down: 'data/cat_active.png'
                size_hint_x: None
                width: 200
            Label:
                size_hint_x: 1

<BalanceScreen>:
    BoxLayout:
        orientation: "vertical"

        TitleBar:
            title: "balance"

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 10

            BoxLayout:
                size_hint_y: None
                Label:
                    text: "balance: "
                Label:
                    text: f"{app.balance}"
            TextInput:
                size_hint_y: None
                height: 300
                text: "description"
                id: balance_description
            BoxLayout:
                size_hint_y: None
                Label:
                    text: "amount: "
                TextInput:
                    text: "0"
                    multiline: False
                    id: balance_amount
                Button:
                    text: "submit"
                    on_press: root.submit_balance_change()
            Label:
                size_hint_y: None
                text: ""
